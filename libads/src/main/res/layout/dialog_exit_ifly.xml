<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="是否退出"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fc3259" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ad_layout">
        <TextView
            android:id="@+id/ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_ad"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="300dp"
            android:scaleType="fitXY" />
    </LinearLayout>


        <RelativeLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ver_sep_line"
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="#e0e0e0" />

            <TextView
                android:id="@+id/left_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@id/ver_sep_line"
                android:background="@drawable/dlg_left_bot_btn_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#fc3259"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/right_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/ver_sep_line"
                android:background="@drawable/dlg_left_bot_btn_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#fc3259"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/sep"
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_alignParentTop="true"
                android:src="#e0e0e0" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>